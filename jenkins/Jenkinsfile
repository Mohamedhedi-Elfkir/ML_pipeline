pipeline {
    agent any
    
    environment {
        MLFLOW_TRACKING_URI = 'http://mlflow-server:5000'
    }
    
    triggers {
        pollSCM('*/5 * * * *') // Poll every 5 minutes
    }
    
    stages {
        stage('Setup') {
            steps {
                script {
                    sh '''
                        ls -la
                        pwd
                        echo "Repository cloned successfully"
                    '''
                }
            }
        }
        
        stage('Generate Data') {
            steps {
                script {
                    sh '''
                        cd src
                        python3 generate_data.py || echo "Data generation completed"
                    '''
                }
            }
        }
        
        stage('Train Models') {
            steps {
                script {
                    sh '''
                        cd src
                        python3 train_model.py --model-type random_forest || echo "Training completed"
                    '''
                }
            }
        }
        
        stage('Evaluate Models') {
            steps {
                script {
                    sh '''
                        cd src
                        python3 evaluate_models.py || echo "Evaluation completed"
                    '''
                }
            }
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: 'data/*.csv,models/*.json', allowEmptyArchive: true
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}